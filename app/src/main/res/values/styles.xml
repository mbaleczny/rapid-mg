<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextColor">@android:color/white</item>
    </style>

    <style name="AttributeText" tools:ignore="NewApi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/tw_text_size_medium</item>
    </style>

    <style name="FullNameText" parent="AttributeText" tools:ignore="NewApi">
        <item name="android:layout_marginEnd">@dimen/user_panel_avatar_margin</item>
        <item name="android:layout_marginRight">@dimen/user_panel_avatar_margin</item>
        <item name="android:textSize">@dimen/tw_text_size_large</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Timestamp" parent="AttributeText" tools:ignore="NewApi">
        <item name="android:paddingLeft">@dimen/tw_timestamp_padding</item>
        <item name="android:paddingStart">@dimen/tw_timestamp_padding</item>
        <item name="android:paddingEnd">@dimen/tw_timestamp_padding</item>
        <item name="android:paddingRight">@dimen/tw_timestamp_padding</item>
    </style>

    <style name="TweetText" parent="AttributeText" tools:ignore="NewApi">
        <item name="android:layout_marginLeft">@dimen/tw_vh_text_left_margin</item>
        <item name="android:layout_marginStart">@dimen/tw_vh_text_left_margin</item>
        <item name="android:layout_marginEnd">@dimen/tw_vh_text_left_margin</item>
        <item name="android:layout_marginRight">@dimen/tw_vh_text_left_margin</item>
        <item name="android:textColor">#292f33</item>
        <item name="android:maxLines">5</item>
        <item name="android:maxLength">140</item>
        <item name="android:textSize">@dimen/tw_text_size_large</item>
    </style>

    <style name="ScreenName" parent="AttributeText" tools:ignore="NewApi">
        <item name="android:layout_marginEnd">@dimen/user_panel_avatar_margin</item>
        <item name="android:layout_marginRight">@dimen/user_panel_avatar_margin</item>
        <item name="android:layout_marginBottom">@dimen/tw_screen_name_bottom_margin</item>
        <item name="android:layout_marginTop">@dimen/tw_user_panel_top_bottom_margin</item>
    </style>

    <style name="ProfileSummary" parent="AttributeText" tools:ignore="NewApi">
        <item name="android:textSize">@dimen/tw_text_size_large</item>
        <item name="android:layout_marginEnd">@dimen/user_panel_avatar_margin</item>
        <item name="android:layout_marginRight">@dimen/user_panel_avatar_margin</item>
        <item name="android:layout_marginBottom">@dimen/tw_user_panel_summary_bottom_margin</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="TweetAvatar" tools:ignore="NewApi">
        <item name="android:layout_width">@dimen/tw_vh_avatar_size</item>
        <item name="android:layout_height">@dimen/tw_vh_avatar_size</item>
        <item name="android:layout_marginBottom">@dimen/tw_vh_avatar_margin_end</item>
        <item name="android:layout_marginEnd">@dimen/tw_vh_avatar_margin_end</item>
        <item name="android:layout_marginRight">@dimen/tw_vh_avatar_margin_end</item>
        <item name="android:layout_marginLeft">@dimen/tw_vh_avatar_margin_left</item>
        <item name="android:layout_marginStart">@dimen/tw_vh_avatar_margin_left</item>
        <item name="android:layout_marginTop">@dimen/tw_vh_avatar_margin_left</item>
    </style>

</resources>
